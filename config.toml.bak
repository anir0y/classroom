baseURL = "https://classroom.anir0y.in"
languageCode = "en"
title = "Classroom"
theme = "terminal"
copyright = "YOU CAN REUSE MY CONTENT"

enableRobotsTXT = true
buildDrafts = false
buildFuture = false
buildExpired = false

[pagination]
  pagerSize = 10

[minify]
  disableXML = true
  minifyOutput = true

[outputs]
  home = ["HTML", "RSS"]

[markup]
  [markup.goldmark]
    [markup.goldmark.renderer]
      unsafe = true
  [markup.highlight]
    noClasses = false

[params]
  contentTypeName = "post"
  themeColor = "green"
  showMenuItems = 5
  fullWidthTheme = false
  centerTheme = true
  autoCover = false
  showLastUpdated = true
  readingTime = true
  Toc = true
  TocTitle = "Table of Contents"

  description = "Cybersecurity blog by Animesh Roy â€” CTF walkthroughs, malware analysis, penetration testing, and security research."
  keywords = ["cybersecurity", "tryhackme", "ctf", "malware analysis", "penetration testing", "red teaming"]
  author = "Animesh Roy"

  [params.logo]
    logoText = "Classroom"
    logoHomeLink = "/"

  [params.twitter]
    creator = "anir0y"
    site = "anir0y"

