/* Custom styles for classroom.anir0y.in */

/* Image sizing for inline images */
img[alt=crisis] { width: 200px; }
img[alt=tmux] { width: 200px; }
img[alt=logo] { width: 200px; }
img[alt=img] { width: 90%; }

/* Scoped to post-content to avoid conflict with Terminal's .container.center */
.post-content .center {
  display: block;
  margin-left: auto;
  margin-right: auto;
  width: 50%;
}

/* Ad slot spacing */
.ad-container {
  margin: 1.5rem 0;
  text-align: center;
  min-height: 100px;
}

/* Buy Me Coffee positioning */
.bmc-container {
  margin: 2rem 0;
  text-align: center;
}

/* Cover image styling for single posts */
.post-cover {
  max-width: 100%;
  height: auto;
  margin: 1.5rem 0;
  border-radius: 4px;
}

/* Utterances container fix for Terminal theme */
.utterances-container {
  max-width: 100%;
}

.utterances-container .utterances {
  max-width: 100%;
}

/* ================================================
   Container width override for TOC sidebar
   Terminal default is 864px â€” widen to fit content + TOC
   ================================================ */
.container.center {
  max-width: 1200px;
}

/* ================================================
   TOC Sidebar Layout (single posts)
   ================================================ */

.post-layout {
  display: flex;
  gap: 2rem;
  align-items: flex-start;
}

.post-body {
  flex: 1;
  min-width: 0; /* prevent flex overflow */
}

.toc-sidebar {
  width: 250px;
  flex-shrink: 0;
}

.toc-sidebar .table-of-contents {
  position: sticky;
  top: 1rem;
  max-height: 80vh;
  overflow-y: auto;
  font-size: 0.85rem;
  padding-left: 0.5rem;
  border-left: 2px solid var(--accent, #1a8);
}

.toc-sidebar .table-of-contents h2 {
  font-size: 1rem;
  margin-top: 0;
}

.toc-sidebar .table-of-contents ul {
  list-style: none;
  padding-left: 0.8rem;
  margin: 0;
}

.toc-sidebar .table-of-contents li {
  margin: 0.3rem 0;
}

.toc-sidebar .table-of-contents a {
  text-decoration: none;
  opacity: 0.8;
}

.toc-sidebar .table-of-contents a:hover {
  opacity: 1;
  text-decoration: underline;
}

/* Mobile: stack TOC above content */
@media (max-width: 768px) {
  .post-layout {
    flex-direction: column-reverse;
  }

  .toc-sidebar {
    width: 100%;
  }

  .toc-sidebar .table-of-contents {
    position: static;
    max-height: none;
    border-left: none;
    border-bottom: 2px solid var(--accent, #1a8);
    padding-left: 0;
    padding-bottom: 1rem;
    margin-bottom: 1rem;
  }
}

/* ================================================
   Fixed Square Thumbnails (list/homepage)
   ================================================ */

.post.on-list .post-cover-thumb {
  width: 100%;
  height: 220px;
  overflow: hidden;
  border-radius: 6px;
  margin: 1rem 0;
}

.post.on-list .post-cover-thumb .post-cover {
  width: 100%;
  height: 100%;
  object-fit: cover;
  margin: 0;
  border-radius: 0;
}
